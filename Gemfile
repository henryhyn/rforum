source 'http://ruby.taobao.org'

gem 'rails', '4.1.2'
gem 'mysql2', '0.3.14' # A simple, fast Mysql library for Ruby

gem 'i18n', '0.6.9' # New wave Internationalization support for Ruby
gem 'slim-rails', '2.1.5' # provides slim generator, will load slim automatically

gem 'i18n-js', '2.1.2' # provide the Rails I18n translations on the Javascript.
gem 'coffee-rails', '4.0.1' # CoffeeScript adapter for the Rails asset pipeline
gem 'jquery-rails', '3.0.4' # provides jQuery and the jQuery-ujs driver
gem 'turbolinks', '2.1.0' # makes following links in your web application faster
gem 'jquery-turbolinks', '2.0.1' # drop-in fix binded events problem caused by Turbolinks
gem 'jquery-validation-rails', '1.11.1.1' # Integrate the jQuery Validation plugin
gem 'uglifier', '2.4.0' # Uglifier minifies JavaScript files
gem 'jbuilder', '2.0.2' # Create JSON structures via a Builder-style DSL
gem 'sass-rails', '~> 4.0.1' # Sass adapter for the Rails asset pipeline
gem 'bourbon', '3.1.8' # provide a comprehensive framework of sass mixins

gem 'devise', '3.2.2' # Flexible authentication solution for Rails with Warden
gem 'cancan', '1.6.10' # Simple authorization solution for Rails which is decoupled from user roles
gem 'rolify', '3.2.0' # Very simple Roles library
gem 'safe_yaml', '1.0.0' # Parse YAML safely
gem 'mini_magick', '3.7.0' # Manipulate images
gem 'carrierwave', '0.10.0' # Upload files in your Ruby applications
gem 'remotipart', '1.2.1' # enabling remote multipart forms

gem 'awesome_nested_set', '3.0.0.rc.3' # An awesome nested set implementation for Active Record
gem 'faker', '1.2.0' # generate fake data: names, addresses, phone numbers, etc.
gem 'kaminari', '0.15.0' # paginator for Rails
gem 'roo', '1.13.2' # Roo can access the contents of various spreadsheet files.
gem 'nokogiri', '1.6.1' # HTML, XML, SAX, and Reader parser

group :development, :test do
  gem 'annotate', '2.6.5' # annotates
  gem 'rspec-rails', '2.14.0' # RSpec for Rails
  gem 'spork-rails', '4.0.0' # Plugin for Spork to support Rails
  gem 'guard-rspec', '4.2.0' # Guard::RSpec automatically run your specs
  gem 'guard-spork', '1.5.1' # Guard::Spork automatically manage Spork DRb servers
  gem 'guard-cucumber', '1.4.1' # automatically run your features
  gem 'rails_best_practices', '1.14.4' # a code metric tool for rails codes
end

group :test do
  gem 'factory_girl_rails', '4.3.0' # provides integration between factory_girl and rails 3
  gem 'selenium-webdriver', '2.39.0' # a tool for writing automated tests of websites
  gem 'capybara', '2.2.0' # an integration testing tool for rack based web applications
  gem 'cucumber-rails', '1.4.0', :require => false # Cucumber Generator and Runtime for Rails
  gem 'database_cleaner', '1.2.0' # Strategies for cleaning databases
  gem 'growl', '1.0.3' # growlnotify bindings
end
